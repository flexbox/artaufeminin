{
  "Main": {
    "uid": {
      "type": "UID",
      "config": {
        "label": "slug",
        "placeholder": "Url de l'article"
      }
    },
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "title",
        "placeholder": "Titre de l'article"
      }
    },
    "description": {
      "type": "StructuredText",
      "config": {
        "multi": "strong,em",
        "label": "description",
        "placeholder": "Court résumé de l'article pour donner aux visiteurs envie de lire"
      }
    },
    "image": {
      "type": "Image",
      "config": {
        "constraint": {},
        "thumbnails": [],
        "label": "image"
      }
    },
    "date": {
      "type": "Date",
      "config": {
        "label": "date",
        "placeholder": "Date de l'article"
      }
    },
    "content": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph,heading2,heading3,heading4,strong,em,hyperlink,image,embed,list-item,o-list-item",
        "allowTargetBlank": true,
        "label": "content",
        "labels": ["blockquote"],
        "placeholder": "Contenu de l'article"
      }
    }
  }
}
